@model NB_JaimeJativa.Repositorio.TareaDTO

@{
    ViewBag.Title = "Editar Tarea";
}

<h2>Editar Tarea</h2>

@using (Html.BeginForm("Editar", "Tarea", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Titulo)
        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", maxlength = 200 } })
        @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion)
        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", maxlength = 200 })
        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FechaCreacion)
        <input type="datetime-local" id="FechaCreacion" name="FechaCreacion" class="form-control" value="@Model.FechaCreacion.ToString("yyyy-MM-ddTHH:mm")" readonly />
        @Html.ValidationMessageFor(model => model.FechaCreacion, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FechaVencimiento)
        @{
            string fechaVencimientoValue = Model.FechaVencimiento.HasValue ? Model.FechaVencimiento.Value.ToString("yyyy-MM-ddTHH:mm") : string.Empty;
        }
        <input type="datetime-local" id="FechaVencimiento" name="FechaVencimiento" class="form-control" value="@fechaVencimientoValue" />
        @Html.ValidationMessageFor(model => model.FechaVencimiento, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Completada)
        @Html.DropDownListFor(model => model.Completada, new List<SelectListItem>
        {
            new SelectListItem { Text = "Sí", Value = "true" },
            new SelectListItem { Text = "No", Value = "false" }
        }, "Seleccione", new { @class = "form-control" })
    </div>
    <div class="mt-2 gap-2">
        <button type="button"  id="btnGuardar" class="btn btn-primary">Guardar</button>
        @*@using (Html.BeginForm("Eliminar", "Tarea", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ID)
            <button type="submit" class="btn btn-danger">Eliminar</button>
        }*@
        <button type="button"  id="btnEliminar" value="@Model.ID"class="btn btn-danger">Eliminar</button>
    </div>

}
