@model IEnumerable<NB_JaimeJativa.Repositorio.TareaDTO>

@{
    ViewBag.Title = "ListadoTareas";
}

<h2>ListadoTareas</h2>

<p>
    <a href="/Tarea/Crear" class="btn btn-info">Crear Tarea</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </th>
        <th>
            <span>Estado</span>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @item.FechaCreacion.ToString("dd/MM/yyyy")
        </td>
        <td>
            @if (item.FechaVencimiento.HasValue)
            {
                @item.FechaVencimiento.Value.ToString("dd/MM/yyyy")
            }
            else
            {
                <span>No disponible</span>
            }

        </td>
        <td>
            @if (item.Completada)
            {
                <div class="completada"></div>
            }
            else
            {
                <div class="incompletada"></div>
            }
        </td>
        <td>
          
            <a href="/Tarea/Editar/@item.ID" class="btn btn-primary">Editar</a>

        </td>
    </tr>
}

</table>
